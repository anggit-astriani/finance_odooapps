<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="res_config_settings_view_form_purchase_anggit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.purchase.anggit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app name="purchase_anggit" string="Purchase Anggit">
                    <block title="Account Configuration" name="account_config">
                        <setting string="Default Account Codes" help="Configure default payable and expense account codes">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="payable_account_code"/>
                                    <field name="payable_account_code" placeholder="e.g. 2110"/>
                                </div>
                                <div class="row">
                                    <label class="col-lg-3 o_light_label" for="expense_account_code"/>
                                    <field name="expense_account_code" placeholder="e.g. 5110"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>